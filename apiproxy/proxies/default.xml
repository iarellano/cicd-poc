<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="IP">
            <Description>IP</Description>
            <Request/>
            <Response>
                <Step>
                    <Name>GetUuid</Name>
                </Step>
                <Step>
                    <Name>MashUpIpAndUuid</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/ip") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="NotFound">
            <Request>
                <Step>
                    <Name>Raise-Fault-1</Name>
                </Step>
            </Request>
            <Condition>1 == 2</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/bin</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="google">
        <TargetEndpoint>google</TargetEndpoint>
        <Condition>(proxy.pathsuffix MatchesPath "/google") and (request.verb = "GET")</Condition>
    </RouteRule>
    <RouteRule name="facebook">
        <TargetEndpoint>facebook</TargetEndpoint>
        <Condition>(proxy.pathsuffix MatchesPath "/facebook") and (request.verb = "GET")</Condition>
    </RouteRule>
    <RouteRule name="httpbin">
        <TargetEndpoint>default</TargetEndpoint>
        <Condition>(proxy.pathsuffix MatchesPath "/ip") and (request.verb = "GET")</Condition>
    </RouteRule>
</ProxyEndpoint>